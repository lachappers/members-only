<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="posts">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <% if user_signed_in? %>
        <td><%= post.user.username %></td>
        <td><%= link_to 'Show', post %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>




<%= link_to "New post", new_post_path %>